<h2 class="ui center aligned icon header">
  <i class="circular purple studiovinari icon"></i>
  Oracles Circle
</h2>

<div class="ui placeholder segment">
  <div class="ui two column very relaxed stackable grid">
    <div class="column">
      <%= form_with(scope: :session, class: "ui form", role: "form", url: login_path) do |f| %>
        <div class="field">
          <%= f.label :username, "Title" %>
          <div class="ui left icon input">
            <%= f.text_field :username, placeholder: "Username" %>
            <i class="inverted circular purple studiovinari icon"></i>
          </div>
        </div>
        <div class="field">
          <%= f.label :password, "Passcode" %>
          <div class="ui left icon input">
            <%= f.password_field :password, placeholder: "Password" %>
            <i class="inverted circular purple lock icon"></i>
          </div>
        </div>
        <%= f.button "Enter the Circle", class: "ui purple basic button" %>
      <% end %>
    </div>
    <div class="middle aligned column">
      <div class="ui big basic purple button">
        <i class="purple studiovinari icon"></i>
        Join the Oracles
      </div>
    </div>
  </div>
  <div class="ui vertical divider">
    Or
  </div>
</div>