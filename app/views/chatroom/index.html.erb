<h2 class="ui center aligned icon header">
  <i class="circular purple studiovinari icon"></i>
  Oracles Speech
</h2>

<div class="ui two column grid">
  <div class="twelve wide column">
    <div class="ui fluid purple card chatbox">
      <div class="content">
      <% @messages.each do |message| %>
        <div class="ui feed">
          <div class="event">
            <div class="label">
            <i class="circular purple studiovinari icon"></i>
              <%# <img src="/images/avatar/small/jenny.jpg"> %>
            </div>
            <div class="content">
              <div class="date">
                <%= time_ago_in_words(message.created_at) %>
              </div>
              <div class="summary">
                <em><%= message.user.username %>:</em>
                <%= simple_format(message.body) %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
      </div>
      <div class="extra content">
        <form class="ui reply form">
          <div class="field">
            <div class="ui fluid icon input">
            <input type="text" placeholder="Speak">
              <i class="bordered inverted purple studiovinari icon"></i>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
  

  <div class="four wide column">
    <div class="ui fluid purple card chatbox">
      <div class="content">
        <div class="ui secondary vertical pointing menu">
          <a class="item">
            Home
          </a>
          <a class="item">
            Messages
          </a>
          <a class="item">
            Friends
          </a>
        </div>
      </div>
    </div>
  </div>
</div>